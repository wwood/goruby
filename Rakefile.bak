begin
  require 'jeweler'
  Jeweler::Tasks.new do |gemspec|
    gemspec.name = "goruby"
    gemspec.summary = "Gene Ontology (GO) interface for Ruby"
    gemspec.description = "GoRuby makes it easy to interact with the Gene Ontology by using the infrastructure setup in R. By connecting to R using RSRuby, the database and methods can be interrogated. Plus, keeping the R library up to date is much simpler than having to keep a GO implementation up to date."
    gemspec.email = "donttrustben@gmail.com"
    gemspec.homepage = "http://github.com/wwood/goruby"
    gemspec.authors = ["Ben J. Woodcroft"]
    
    gemspec.add_dependency('rsruby')
  end
rescue LoadError
  puts "Jeweler not available. Install it with: gem install jeweler"
end

